{
  "name": "makebot-backend",
  "version": "1.0.0",
  "description": "Backend для сайта MakeBot - разработка чат-ботов, ИИ решений и сайтов",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "mkdir -p data && echo '[]' > data/estimates.json && echo '[]' > data/contacts.json",
    "clean": "rm -rf data/*.json node_modules",
    "lint": "eslint .",
    "docker:build": "docker build -t makebot .",
    "docker:run": "docker run -p 3000:3000 makebot"
  },
  "keywords": [
    "chatbot",
    "ai",
    "website",
    "development",
    "automation"
  ],
  "author": "MakeBot Team <info@makebot.ru>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/makebot-team/makebot-site.git"
  },
  "bugs": {
    "url": "https://github.com/makebot-team/makebot-site/issues"
  },
  "homepage": "https://makebot.ru"
